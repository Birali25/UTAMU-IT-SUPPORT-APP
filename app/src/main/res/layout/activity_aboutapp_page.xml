<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F0F7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/img"
            android:contentDescription="App Logo"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"/>

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTAMU IT Support App"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Description Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The UTAMU IT Support App helps students and lecturers report, track, and resolve IT-related issues at Uganda Technology and Management University (UTAMU). It provides a simple and organized way to communicate, monitor progress, and access tutorials for common technical problems."
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Key Features Header -->
        <TextView
            android:id="@+id/tvFeaturesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="8dp"/>

        <!-- Features List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Feature Item Template -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Report Issues\n  Students can submit IT problems with a title, description, and optional photo. The issue is stored in a central database and assigned an initial status."
                    android:textSize="16sp"
                    android:textColor="#333333"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• View Issues\n  Students can track their reported issues including title, description, and current status. Lecturers can view all student issues with full details for efficient management."
                    android:textSize="16sp"
                    android:textColor="#333333"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Close Issues\n  Lecturers can close resolved issues by updating status and adding comments. Status and closure date are automatically updated for transparency."
                    android:textSize="16sp"
                    android:textColor="#333333"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Notifications\n  Users receive real-time alerts for new issues, responses, and resolutions. Notifications help students stay informed about the progress of their reported issues."
                    android:textSize="16sp"
                    android:textColor="#333333"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Troubleshooting Tutorials\n  Lecturers can upload guides and tutorials to help students solve common IT problems independently, reducing repeated support requests."
                    android:textSize="16sp"
                    android:textColor="#333333"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• User-Friendly Interface\n  Clean and interactive design with search bar, action buttons, and scrollable list of issues. Quick access buttons allow efficient reporting and tracking of IT issues."
                    android:textSize="16sp"
                    android:textColor="#333333"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
